datasource db {
  provider = "postgresql"
  url      = ""
}

generator zod {
  provider = "zod-prisma"
  output   = "../expected/"
}

model Address {
  id      String      @id @unique @default(uuid())
  type    AddressType
  company String? /// @zod.min(1).max(50)
  address String /// @zod.min(1).max(50)
  zipCode String /// @zod.min(1).max(10)
  city    String /// @zod.min(1).max(50)
}

enum AddressType {
  PRIVATE
  COMPANY
}
